<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:background="@color/colorPrimaryDark"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/cart_white_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badge_count"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/badge_count"
        android:text="99"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/badge_icon"
        app:layout_constraintTop_toTopOf="@+id/badge_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>